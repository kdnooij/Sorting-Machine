{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    //"args": ["/C", "dir"],
    "args": ["/C", "java", "-jar", "Assembler9.jar"],
    "suppressTaskName": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "Assemble",
            "args": ["${fileBasename}", "${fileBasenameNoExtension}.hex"],
            "isBuildCommand": true
        }
    ]
}